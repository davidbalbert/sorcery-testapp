<% if flash[:error] %>
   <p> <%= flash[:error] %> </p>
<% end %>

<p>Welcome to the sorcery test app. Try to link to the secret page!</p>

<p>
  <% if logged_in? %>
    Hi <%= current_user.username %>.
    Your id is <%= current_user.id %>
    <%= link_to 'logout', logout_path %>
  <% else %>
    <%= link_to 'login', login_path %>
    <%= link_to 'login with Twitter', auth_at_provider_path(:provider => :twitter) %>
    <%= link_to 'signup', signup_path %>
  <% end %>

  <%= link_to 'secret', secret_path %>
</p>
