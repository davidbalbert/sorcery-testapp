<h1>Login form</h1>

<% if flash[:error] %>
  <div>
    <h2>Errors:</h2>
    <p> <%= flash[:error] %> </p>
  </div>
<% end %>

<%= form_tag sessions_path do %>

  <div>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>  
  </div>

  <div>
    <%= submit_tag 'Login' %>
  </div>

<% end %>
